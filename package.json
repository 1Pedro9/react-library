{
  "name": "react-library",
  "version": "1.0.0",
  "description": "Reusable React components",
  "author": "Pedro <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/1Pedro9/react-library#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1Pedro9/react-library.git"
  },
  "bugs": {
    "url": "https://github.com/1Pedro9/react-library/issues"
  },

  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },

  "files": [
    "dist"
  ],

  "sideEffects": [
    "**/*.module.css",
    "**/*.css"
  ],

  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },

  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },

  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },

  "publishConfig": {
    "access": "public"
  },

  "keywords": [
    "react",
    "components",
    "ui",
    "library"
  ]
}